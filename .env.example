# Redis Configuration (Token Bucket Rate Limiting)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# PostgreSQL Configuration (Tenant Tier Registry)
POSTGRES_ENABLED=false
POSTGRES_URL=postgresql://user:password@localhost:5432/tenants
POSTGRES_MAX_CONNECTIONS=20

# Prometheus Configuration (Metrics & Alerting)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8001

# Offline Mode (Skip all external services)
OFFLINE=true

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@yourcompany.com

# Rate Limiting Defaults (Override per tenant in PostgreSQL)
DEFAULT_RATE_LIMIT_PER_MINUTE=100
NOISY_NEIGHBOR_THRESHOLD_MULTIPLIER=5
CIRCUIT_BREAKER_DURATION_SECONDS=300

# Logging
LOG_LEVEL=INFO

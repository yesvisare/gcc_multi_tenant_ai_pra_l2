# Provisioning Configuration
# Set to "true" to enable actual infrastructure provisioning
# When "false", system runs in simulation mode (safe for development/testing)
PROVISIONING_ENABLED=false

# AWS Configuration (required for infrastructure provisioning)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Terraform Configuration
TERRAFORM_STATE_BUCKET=terraform-state-bucket
TERRAFORM_WORKSPACE=default

# Approval Workflow Configuration
AUTO_APPROVE_THRESHOLD=1000000  # â‚¹10 lakh (budgets below this auto-approve)
CFO_APPROVAL_WEBHOOK=https://your-approval-system.example.com/webhook

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
NOTIFICATION_EMAIL_FROM=noreply@gcc.example.com

# Tenant Registry Database (PostgreSQL)
REGISTRY_DB_HOST=localhost
REGISTRY_DB_PORT=5432
REGISTRY_DB_NAME=tenant_registry
REGISTRY_DB_USER=registry_user
REGISTRY_DB_PASSWORD=your_db_password_here

# Vector Database Configuration (choose one)
VECTOR_DB_TYPE=pinecone  # Options: pinecone, qdrant, chroma

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your_pinecone_api_key_here

# Qdrant Configuration (if using Qdrant)
# QDRANT_URL=http://localhost:6333

# Monitoring Configuration
GRAFANA_URL=http://localhost:3000
PROMETHEUS_URL=http://localhost:9090

# Validation Configuration
VALIDATION_TIMEOUT_SECONDS=300
QUERY_PERFORMANCE_SLA_MS=500  # Query performance SLA in milliseconds

# Logging Configuration
LOG_LEVEL=INFO

# Offline Mode (for notebook)
# Set to "true" to skip all external API calls in Jupyter notebooks
OFFLINE=false

# ============================================================================
# Prometheus Configuration
# ============================================================================
# Enable/disable Prometheus integration for blast radius detection
PROMETHEUS_ENABLED=false

# Prometheus server URL (default: http://prometheus:9090)
PROMETHEUS_URL=http://prometheus:9090

# ============================================================================
# Detection Parameters
# ============================================================================
# Error rate threshold for triggering circuit breaker (0.0-1.0)
# Default: 0.50 (50% error rate)
ERROR_THRESHOLD=0.50

# Polling interval in seconds (how often to check tenant health)
# Default: 10 seconds
CHECK_INTERVAL_SECONDS=10

# Prometheus time window for rate calculations
# Default: 5m (5 minutes)
CHECK_WINDOW=5m

# ============================================================================
# Circuit Breaker Parameters
# ============================================================================
# Number of consecutive failures before circuit breaker opens
# Default: 5 failures
FAILURE_THRESHOLD=5

# Timeout in seconds before attempting recovery (OPEN -> HALF_OPEN)
# Default: 60 seconds
TIMEOUT_SECONDS=60

# ============================================================================
# Notification Configuration (Optional)
# ============================================================================
# PagerDuty integration
PAGERDUTY_ENABLED=false
PAGERDUTY_API_KEY=your_pagerduty_api_key_here

# Slack webhook integration
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Offline Mode (for development/testing)
# ============================================================================
# Set to 'true' to skip all external service calls in notebooks
OFFLINE=false

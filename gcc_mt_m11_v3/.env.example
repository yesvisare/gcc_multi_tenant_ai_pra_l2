# Multi-Service Configuration for L3 M11.3
# Database Isolation & Cross-Tenant Security

# PostgreSQL Configuration (Strategy 1: RLS)
POSTGRES_ENABLED=false
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=multi_tenant_rag
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Pinecone Configuration (Strategy 2: Namespace Isolation)
PINECONE_ENABLED=false
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_environment_here
PINECONE_INDEX=multi-tenant-rag

# Redis Configuration (Cache Isolation)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Configuration (S3 Prefix Isolation)
AWS_ENABLED=false
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=multi-tenant-docs

# Offline Mode (for development/testing without services)
OFFLINE=true

# Logging
LOG_LEVEL=INFO
